{% extends 'templates/app.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-8 col-md-offset-3">
            <div class="panel panel-default">
            <div class="panel-heading">Sign in </div>
                <div class="panel-body">

               {# {{errors | json_encode}} #}

                    <form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off" >
                        <div class="form-group {{ errors.email ? 'has-error':''}}">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}">

                            {% if errors.email %}
                            <span class="help-block">{{errors.email | first}}</span>
                            {% endif %}
                        </div>

                       

                         <div class="form-group {{ errors.password ? 'has-error':''}}">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password"  class="form-control" value="{{ old.password }}">
                        
                        {% if errors.password %}
                            <span class="help-block">{{errors.password | first}}</span>
                            {% endif %}
                            
                        </div>
                        <button type="submit" class="btn btn-default" >Sign in</button>
                            {# En esta variable global de twig se encuentra el token de seguridad  de CSRF #}
                        {{csrf.field | raw}}
                        
                    </form>
            </div>
            </div>
        </div>
    </div>

{% endblock %}